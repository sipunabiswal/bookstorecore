@page
@model BookStoreRazor.Pages.Categories.DeleteCategoryModel

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input asp-for="Category.Id" hidden />
            <div class="form-group p-1">
                <label asp-for="Category.Name" class="control-label"></label>
                <input asp-for="Category.Name" disabled class="form-control" />
            </div>
            <div class="form-group p-1">
                <label asp-for="Category.DisplayOrder" class="control-label"></label>
                <input asp-for="Category.DisplayOrder" disabled class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-page="/Categories/Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
