@model List<Category>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient py-3 ">
        <div clsss="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="col-12 text-end">
            <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-primary mb-2" title="New Category">
                <i class="bi bi-plus-lg"></i> New Category
            </a>
        </div>
       

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.DisplayOrder
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-action="EditCategory" asp-route-id="@item.Id" class="mx-2"><i class="bi bi-pen"></i></a>
                                <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.Id" class="mx-2 text-danger"><i class="bi bi-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>