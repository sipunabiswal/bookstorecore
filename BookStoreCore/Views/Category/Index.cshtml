@model List<Category>



<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> New Category
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead> 
    <tr>
        <th>
            Category Name
        </th>
        <th> 
            Display Order
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="EditCategory" asp-route-id="@item.Id" class="mx-2"><i class="bi bi-pen"></i></a>
                            <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.Id"  class="mx-2 text-danger"><i class="bi bi-trash"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>
</div>